<resources>

    <!-- You can also use this theme: Theme.MaterialComponents.Light.DarkActionBar -->

    <!-- Theme for PhotoViewer Activity -->
    <style name="noActionBarTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorSecondary">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color1</item>
        <item name="colorPrimaryDark">@color/primary_color_dark1</item>
        <item name="colorAccent">@color/primary_color1</item>
        <item name="colorSecondary">@color/primary_color1</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/primary_color1</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <item name="textInputStyle">@style/AppTextField</item>
    </style>

    <!-- Night Theme (WIP) -->
    <style name="AppThemeAdditional" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/primary_color1</item>
        <item name="colorPrimaryDark">@color/primary_color_dark1</item>
        <item name="colorAccent">@color/accent_color1</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/primary_color1</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <!-- анимация перехода между Activity -->
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- SnackBar style -->
    <style name="MySnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_margin">32dp</item>
    </style>

    <!-- Collapsing toolbar layout title styles -->
    <style name="collapsingToolbarTitleExpanded" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
    </style>
    <style name="collapsingToolbarTitleCollapsed" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style for editText field in MaterialDialog -->
    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
    </style>

</resources>